{
  "name": "neo-backend",
  "version": "1.0.0",
  "description": "Inventory backend (Express + Knex + Postgres)",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "cross-env NODE_ENV=development nodemon --watch src --ext js,json --exec \"node -r source-map-support/register src/server.js\"",

    "clean": "rimraf dist",
    "build": "npm run clean && babel src --out-dir dist --copy-files --source-maps inline",
    "start:prod": "node -r source-map-support/register dist/server.js",

    "migrate": "knex migrate:latest --knexfile knexfile.js",
    "migrate:rollback": "knex migrate:rollback --knexfile knexfile.js",
    "seed": "knex seed:run --knexfile knexfile.js",
    "db:reset": "npm run migrate:rollback -- --all && npm run migrate && npm run seed",

    "health": "node -e \"require('dotenv').config();console.log('OK:',process.env.DB_HOST,process.env.DB_NAME)\"",
    "test": "echo \"No tests yet\" && exit 0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mahmoudd2/NEO-BACKEND.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mahmoudd2/NEO-BACKEND/issues"
  },
  "homepage": "https://github.com/mahmoudd2/NEO-BACKEND#readme",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.0",
    "@babel/core": "^7.28.0",
    "@babel/node": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.0",
    "rimraf": "^6.0.1",
    "source-map-support": "^0.5.21"
  }
}
